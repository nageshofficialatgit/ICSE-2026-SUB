pragma solidity ^0.8.18;

interface IERC20 {
    function totalSupply() external view returns (uint256);
    function balanceOf(address account) external view returns (uint256);
    function transfer(address recipient, uint256 amount) external returns (bool);
    function allowance(address owner, address spender) external view returns (uint256);
    function approve(address spender, uint256 amount) external returns (bool);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(address indexed owner, address indexed spender, uint256 value);
}

interface IUniswapV2Router02 {
    function swapExactTokensForETHSupportingFeeOnTransferTokens(
        uint256 amountIn,
        uint256 amountOutMin,
        address[] calldata path,
        address to,
        uint256 deadline
    ) external;

    function WETH() external pure returns (address);
}

contract retardComputer is IERC20 {
    string public constant name = "RETARD.COMPUTER";
    string public constant symbol = "DISK";
    uint8 public constant decimals = 18;
    uint256 public constant totalSupply = 101_110_010_011 * (10 ** decimals);

    address public immutable overlord; // Owner
    address public immutable bribeWallet; // Tax wallet
    address public immutable magicInternetPipe; // Uniswap Router
    address public memePool; // Uniswap Pair

    uint256 public constant TOTAL_TAX = 1; // 1% tax
    uint256 public constant TAX_DISK = 50; // 50% of tax in tokens
    uint256 public constant TAX_ETH = 50; // 50% of tax converted to ETH

    bool public rugPullAllowed = false; // Trading Enabled
    bool private inSwap = false;

    mapping(address => uint256) private bagOfCoins;
    mapping(address => mapping(address => uint256)) private IOweYou;
    mapping(address => bool) private isTaxDodger;

    event TradingUnlocked();
    
    modifier onlyOverlord() {
        require(msg.sender == overlord, "You are not the overlord.");
        _;
    }

    modifier noRugPulls() {
        inSwap = true;
        _;
        inSwap = false;
    }

    constructor(address _magicInternetPipe, address _bribeWallet) {
        overlord = msg.sender;
        bribeWallet = _bribeWallet;
        magicInternetPipe = _magicInternetPipe;
        bagOfCoins[msg.sender] = totalSupply;
        isTaxDodger[msg.sender] = true;
        isTaxDodger[_bribeWallet] = true;
        emit Transfer(address(0), msg.sender, totalSupply);
    }

    function balanceOf(address account) public view override returns (uint256) {
        return bagOfCoins[account];
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _degenTransfer(msg.sender, recipient, amount);
        return true;
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        IOweYou[msg.sender][spender] = amount;
        emit Approval(msg.sender, spender, amount);
        return true;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return IOweYou[owner][spender];
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        require(IOweYou[sender][msg.sender] >= amount, "Allowance exceeded.");
        IOweYou[sender][msg.sender] -= amount;
        _degenTransfer(sender, recipient, amount);
        return true;
    }

    function _degenTransfer(address sender, address recipient, uint256 amount) private {
        require(rugPullAllowed || sender == overlord, "Trading disabled.");
        require(bagOfCoins[sender] >= amount, "Not enough degen funds.");

        uint256 taxAmount = 0;
        if (!isTaxDodger[sender] && !isTaxDodger[recipient] && (sender == memePool || recipient == memePool)) {
            taxAmount = (amount * TOTAL_TAX) / 100;

            uint256 taxInDisk = (taxAmount * TAX_DISK) / 100;
            uint256 taxInETH = taxAmount - taxInDisk;

            bagOfCoins[bribeWallet] += taxInDisk;
            emit Transfer(sender, bribeWallet, taxInDisk);

            bagOfCoins[address(this)] += taxInETH;
            emit Transfer(sender, address(this), taxInETH);

            if (!inSwap && recipient == memePool) {
                _swapTaxForMagicRocks(taxInETH);
            }
        }

        bagOfCoins[sender] -= amount;
        bagOfCoins[recipient] += (amount - taxAmount);
        emit Transfer(sender, recipient, amount - taxAmount);
    }

function _swapTaxForMagicRocks(uint256 tokenAmount) private noRugPulls {
    require(tokenAmount > 0, "Nothing to swap.");

    address[] memory path = new address[](2);
    path[0] = address(this);
    path[1] = IUniswapV2Router02(magicInternetPipe).WETH();

    IERC20(address(this)).approve(magicInternetPipe, tokenAmount); // ✅ Approve Uniswap to spend tokens

    IUniswapV2Router02(magicInternetPipe).swapExactTokensForETHSupportingFeeOnTransferTokens(
        tokenAmount,
        0,
        path,
        bribeWallet,
        block.timestamp
    );
}

    function allowTheRug(address _memePool) external onlyOverlord {
        require(!rugPullAllowed, "Rug already allowed.");
        memePool = _memePool;
        rugPullAllowed = true;
        emit TradingUnlocked();
    }

    function setTaxDodger(address user, bool dodging) external onlyOverlord {
        isTaxDodger[user] = dodging;
    }

    function howMuchAmITaxed() external pure returns (uint256) {
        return TOTAL_TAX;
    }

    function whereIsTheLiquidity() external view returns (address) {
        return memePool;
    }

    function isThisScamLive() external view returns (bool) {
        return rugPullAllowed;
    }
}
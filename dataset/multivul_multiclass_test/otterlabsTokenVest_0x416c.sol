    // Token address to all vesting schedule IDs for that token
    mapping(address => bytes32[]) private tokenSchedules;
    
    // Vesting schedule ID to VestingSchedule
    mapping(bytes32 => VestingSchedule) private vestingSchedules;
    
    // Total number of vesting schedules
    uint256 private vestingSchedulesCount;
    
    // Total amount of tokens being vested per token address
    mapping(address => uint256) private totalVestingPerToken;

    event VestingScheduleCreated(
        bytes32 vestingScheduleId,
        address token,
        address beneficiary,
        uint256 start,
        uint256 cliff,
        uint256 duration,
        uint256 slicePeriodSeconds,
        bool revocable,
        uint256 amount
    );

    event Released(
        bytes32 vestingScheduleId,
        address token,
        uint256 amount
    );

    event Revoked(
        bytes32 vestingScheduleId,
        address token,
        uint256 returnedAmount
    );

    /**
     * @dev Constructor that sets the owner of the contract to the deployer
     */
    constructor() Ownable(msg.sender) {
    }

    /**
     * @notice Creates a vesting schedule
     * @param _token address of the ERC20 token
     * @param _beneficiary address of the beneficiary
     * @param _start start time of the vesting
     * @param _cliff duration in seconds of the cliff
     * @param _duration duration in seconds of the vesting
     * @param _slicePeriodSeconds duration of a slice period in seconds
     * @param _revocable whether the vesting is revocable or not
     * @param _amount total amount of tokens to be vested
     */
    function createVestingSchedule(
        address _token,
        address _beneficiary,
        uint256 _start,
        uint256 _cliff,
        uint256 _duration,
        uint256 _slicePeriodSeconds,
        bool _revocable,
        uint256 _amount
    ) 
        external 
        nonReentrant 
    {
        require(_beneficiary != address(0), "TokenVesting: beneficiary is zero address");
        require(_duration > 0, "TokenVesting: duration must be > 0");
        require(_amount > 0, "TokenVesting: amount must be > 0");
        require(_slicePeriodSeconds >= 1, "TokenVesting: slicePeriodSeconds must be >= 1");
        require(_duration >= _cliff, "TokenVesting: duration must be >= cliff");
        
        bytes32 vestingScheduleId = computeVestingScheduleId(
            _token,
            _beneficiary,
            _start,
            _cliff,
            _duration,
            vestingSchedulesCount
        );
        
        vestingSchedules[vestingScheduleId] = VestingSchedule({
            initialized: true,
            beneficiary: _beneficiary,
            cliff: _cliff,
            start: _start,
            duration: _duration,
            slicePeriodSeconds: _slicePeriodSeconds,
            revocable: _revocable,
            amountTotal: _amount,
            released: 0,
            revoked: false,
            token: _token,
            vestingScheduleId: vestingScheduleId
        });

        // Update mappings
        beneficiarySchedules[_beneficiary].push(vestingScheduleId);
        tokenSchedules[_token].push(vestingScheduleId);
        totalVestingPerToken[_token] += _amount;
        vestingSchedulesCount++;
        
        // Transfer tokens to this contract
        IERC20(_token).safeTransferFrom(msg.sender, address(this), _amount);
        
        emit VestingScheduleCreated(
            vestingScheduleId,
            _token,
            _beneficiary,
            _start,
            _cliff,
            _duration,
            _slicePeriodSeconds,
            _revocable,
            _amount
        );
    }

    /**
     * @notice Release vested tokens
     * @param vestingScheduleId bytes32 id of the vesting schedule
     * @param amount uint256 amount of tokens to release
     */
    function release(
        bytes32 vestingScheduleId,
        uint256 amount
    )
        external
        nonReentrant
    {
        VestingSchedule storage vestingSchedule = vestingSchedules[vestingScheduleId];
        require(vestingSchedule.initialized, "TokenVesting: schedule not initialized");
        require(msg.sender == vestingSchedule.beneficiary, "TokenVesting: not beneficiary");
        require(!vestingSchedule.revoked, "TokenVesting: schedule revoked");
        
        uint256 vestedAmount = _computeVestedAmount(vestingSchedule);
        require(vestedAmount >= amount, "TokenVesting: not enough vested tokens");
        
        vestingSchedule.released += amount;
        totalVestingPerToken[vestingSchedule.token] -= amount;
        
        IERC20(vestingSchedule.token).safeTransfer(vestingSchedule.beneficiary, amount);
        
        emit Released(vestingScheduleId, vestingSchedule.token, amount);
    }

    /**
     * @notice Revoke a vesting schedule
     * @param vestingScheduleId bytes32 id of the vesting schedule
     */
    function revoke(
        bytes32 vestingScheduleId
    )
        external
        onlyOwner
    {
        VestingSchedule storage vestingSchedule = vestingSchedules[vestingScheduleId];
        require(vestingSchedule.initialized, "TokenVesting: not initialized");
        require(vestingSchedule.revocable, "TokenVesting: not revocable");
        require(!vestingSchedule.revoked, "TokenVesting: already revoked");
        
        uint256 vestedAmount = _computeVestedAmount(vestingSchedule);
        uint256 returnAmount = vestingSchedule.amountTotal - vestedAmount;
        
        vestingSchedule.revoked = true;
        totalVestingPerToken[vestingSchedule.token] -= returnAmount;
        
        if (returnAmount > 0) {
            IERC20(vestingSchedule.token).safeTransfer(owner(), returnAmount);
            emit Revoked(vestingScheduleId, vestingSchedule.token, returnAmount);
        }
    }

    /**
     * @notice Get all vesting schedules for a beneficiary
     * @param _beneficiary address of the beneficiary
     */
    function getVestingSchedulesByBeneficiary(address _beneficiary)
        external
        view
        returns (VestingSchedule[] memory)
    {
        bytes32[] memory scheduleIds = beneficiarySchedules[_beneficiary];
        VestingSchedule[] memory schedules = new VestingSchedule[](scheduleIds.length);
        
        for (uint256 i = 0; i < scheduleIds.length; i++) {
            schedules[i] = vestingSchedules[scheduleIds[i]];
        }
        
        return schedules;
    }

    /**
     * @notice Get all vesting schedules for a token
     * @param _token address of the token
     */
    function getVestingSchedulesByToken(address _token)
        external
        view
        returns (VestingSchedule[] memory)
    {
        bytes32[] memory scheduleIds = tokenSchedules[_token];
        VestingSchedule[] memory schedules = new VestingSchedule[](scheduleIds.length);
        
        for (uint256 i = 0; i < scheduleIds.length; i++) {
            schedules[i] = vestingSchedules[scheduleIds[i]];
        }
        
        return schedules;
    }

    /**
     * @notice Get a specific vesting schedule
     * @param vestingScheduleId bytes32 id of the vesting schedule
     */
    function getVestingSchedule(bytes32 vestingScheduleId)
        external
        view
        returns (VestingSchedule memory)
    {
        return vestingSchedules[vestingScheduleId];
    }

    /**
     * @notice Get total amount being vested for a token
     * @param _token address of the token
     */
    function getTotalVestingAmount(address _token)
        external
        view
        returns (uint256)
    {
        return totalVestingPerToken[_token];
    }

    /**
     * @notice Get total number of vesting schedules
     */
    function getVestingSchedulesCount()
        external
        view
        returns (uint256)
    {
        return vestingSchedulesCount;
    }

    /**
     * @notice Compute the vested amount of tokens
     * @param vestingSchedule VestingSchedule struct containing vesting schedule parameters
     */
    function _computeVestedAmount(VestingSchedule memory vestingSchedule)
        internal
        view
        returns(uint256)
    {
        if (block.timestamp < vestingSchedule.start + vestingSchedule.cliff) {
            return 0;
        }
        
        if (block.timestamp >= vestingSchedule.start + vestingSchedule.duration || vestingSchedule.revoked) {
            return vestingSchedule.amountTotal;
        }
        
        uint256 timeFromStart = block.timestamp - vestingSchedule.start;
        uint256 secondsPerSlice = vestingSchedule.slicePeriodSeconds;
        uint256 vestedSlicePeriods = timeFromStart / secondsPerSlice;
        uint256 vestedSeconds = vestedSlicePeriods * secondsPerSlice;
        
        uint256 vestedAmount = (vestingSchedule.amountTotal * vestedSeconds) / vestingSchedule.duration;
        vestedAmount = vestedAmount - vestingSchedule.released;
        
        return vestedAmount;
    }

    /**
     * @notice Compute the vesting schedule identifier
     */
    function computeVestingScheduleId(
        address token,
        address beneficiary,
        uint256 start,
        uint256 cliff,
        uint256 duration,
        uint256 vestingCount
    )
        public
        pure
        returns(bytes32)
    {
        return keccak256(abi.encodePacked(
            token,
            beneficiary,
            start,
            cliff,
            duration,
            vestingCount
        ));
    }
}
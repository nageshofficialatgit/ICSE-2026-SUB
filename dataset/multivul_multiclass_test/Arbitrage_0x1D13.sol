pragma solidity ^0.8.19;



contract Arbitrage {
    address public owner;
    IUniswapV2Router02 public uniswapRouter;
    IUniswapV2Router02 public sushiswapRouter;
    uint public maxTradeAmount = 0.1 ether; // Limite de trade pour éviter de tout perdre
    bool public paused = false;          // Variable pour gérer le mode pause

    event ArbitrageExecuted(address tokenIn, address tokenOut, uint amountIn, uint profit);
    event FundsWithdrawn(address token, uint amount);
    event ContractPaused(address by);
    event ContractUnpaused(address by);

    modifier onlyOwner() {
        require(msg.sender == owner, "Not the owner");
        _;
    }

    modifier whenNotPaused() {
        require(!paused, "Contract is paused");
        _;
    }

    constructor() {
        owner = msg.sender;
        uniswapRouter = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        sushiswapRouter = IUniswapV2Router02(0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F);
    }

    function pause() external onlyOwner {
        paused = true;
        emit ContractPaused(msg.sender);
    }

    function unpause() external onlyOwner {
        paused = false;
        emit ContractUnpaused(msg.sender);
    }

    function executeArbitrage(
        address tokenIn,
        address tokenOut,
        uint amountIn,
        uint slippageTolerance
    ) external onlyOwner whenNotPaused {
        require(amountIn <= maxTradeAmount, "Amount exceeds max trade limit");

        // Transfert et approbation du token d'entrée
        IERC20(tokenIn).transferFrom(msg.sender, address(this), amountIn);
        IERC20(tokenIn).approve(address(uniswapRouter), amountIn);

        // Acheter sur Uniswap
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;
        uint[] memory amountsOut = uniswapRouter.getAmountsOut(amountIn, path);
        uint amountOutMin = amountsOut[1] * (100 - slippageTolerance) / 100;

        uniswapRouter.swapExactTokensForTokens(
            amountIn,
            amountOutMin,
            path,
            address(this),
            block.timestamp + 60
        );

        // Approvisionnement pour Sushiswap
        uint balanceAfterSwap = IERC20(tokenOut).balanceOf(address(this));
        IERC20(tokenOut).approve(address(sushiswapRouter), balanceAfterSwap);

        // Revendre sur Sushiswap
        path[0] = tokenOut;
        path[1] = tokenIn;
        uint[] memory amountsOutSell = sushiswapRouter.getAmountsOut(balanceAfterSwap, path);
        uint amountInMin = amountsOutSell[1] * (100 - slippageTolerance) / 100;

        uint balanceBeforeSwap = IERC20(tokenIn).balanceOf(address(this));
        sushiswapRouter.swapExactTokensForTokens(
            balanceAfterSwap,
            amountInMin,
            path,
            address(this),
            block.timestamp + 60
        );
        uint profit = IERC20(tokenIn).balanceOf(address(this)) - balanceBeforeSwap;
        require(profit > 0, "Arbitrage not profitable");

        emit ArbitrageExecuted(tokenIn, tokenOut, amountIn, profit);
    }

    function withdrawFunds(address token) external onlyOwner {
        uint balance = IERC20(token).balanceOf(address(this));
        require(balance > 0, "No funds to withdraw");
        IERC20(token).transfer(owner, balance);
        emit FundsWithdrawn(token, balance);
    }
}
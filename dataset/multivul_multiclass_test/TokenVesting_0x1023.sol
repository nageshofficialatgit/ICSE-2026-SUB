        // Only update if original duration is set
        if (entry.originalDuration > 0) {
            uint256 newDuration = entry.originalDuration * (100 - discount) / 100;
            entry.vestingDuration = newDuration;
            
            emit VestingDurationUpdated(investor, entryId, newDuration);
        }
    }
}


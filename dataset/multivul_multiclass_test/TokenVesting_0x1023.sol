    vestingStartTime = block.timestamp;
    vestingStarted = true;
    emit VestingStarted(vestingStartTime);
}

/**
 * @dev Lock tokens with vesting schedule
 * @param account Address of the token recipient
 * @param amount Amount of tokens to lock
 * @param purchaseTime Time when tokens were purchased
 * @param presaleStartTime Time when presale started
 */
function lockWithVesting(
    address account, 
    uint256 amount, 
    uint256 purchaseTime,
    uint256 presaleStartTime
) external override {
    require(msg.sender == presaleContract, "Only presale contract can lock tokens");
    require(account != address(0), "Invalid account");
    require(amount > 0, "Amount must be greater than 0");
    
    // Calculate vesting duration if dynamic vesting is enabled
    uint256 originalDuration;
    if (useDynamicVesting && presaleStartTime > 0 && purchaseTime >= presaleStartTime) {
        originalDuration = purchaseTime - presaleStartTime;
        // Ensure minimum vesting duration (5 hours)
        if (originalDuration < 5 hours) {
            originalDuration = 5 hours;
        }
    } else {
        originalDuration = defaultVestingDuration;
    }
    
    // Apply level discount to vesting duration
    uint256 level = investorLevels[account];
    uint256 discount = levelDiscounts[level];
    uint256 vestingDuration = originalDuration * (100 - discount) / 100;
    
    // Create a new vesting entry
    uint256 entryId = nextEntryId++;
    vestingEntries[entryId] = VestingEntry({
        amount: amount,
        releasedAmount: 0,
        purchaseTime: purchaseTime,
        presaleStartTime: presaleStartTime,
        vestingDuration: vestingDuration,
        originalDuration: originalDuration
    });
    
    // Update account's vesting info
    VestingInfo storage info = vestingInfos[account];
    info.totalAmount += amount;
    info.entryIds.push(entryId);
    
    emit TokensLocked(account, entryId, amount, purchaseTime, vestingDuration);
}

/**
 * @dev Release vested tokens for an account
 * @param account Address to release tokens for
 * @return Amount of tokens released
 */
function releaseVestedTokens(address account) external override returns (uint256) {
    require(account != address(0), "Invalid account");
    require(vestingStarted, "Vesting has not started yet");
    
    VestingInfo storage info = vestingInfos[account];
    require(info.totalAmount > 0, "No vesting entries found");
    
    uint256 totalReleasable = 0;
    
    // Calculate releasable amount for each entry
    for (uint256 i = 0; i < info.entryIds.length; i++) {
        uint256 entryId = info.entryIds[i];
        VestingEntry storage entry = vestingEntries[entryId];
        
        uint256 releasable = calculateEntryReleasableAmount(entry);
        if (releasable > 0) {
            entry.releasedAmount += releasable;
            totalReleasable += releasable;
        }
    }
    
    require(totalReleasable > 0, "No tokens available for release");
    
    // Update total released amount
    info.releasedAmount += totalReleasable;
    
    // Unlock tokens in the token contract
    ITokenMintable(tokenContract).unlockTokens(account, totalReleasable);
    
    emit TokensReleased(account, totalReleasable);
    
    return totalReleasable;
}

/**
 * @dev Calculate releasable amount for a single vesting entry
 * @param entry Vesting entry to calculate for
 * @return Amount of tokens that can be released
 */
function calculateEntryReleasableAmount(VestingEntry storage entry) internal view returns (uint256) {
    if (!vestingStarted || entry.amount == 0) {
        return 0;
    }
    
    // If all tokens have been released, return 0
    if (entry.releasedAmount >= entry.amount) {
        return 0;
    }
    
    // Calculate vested amount
    uint256 vestedAmount;
    
    // Initial release at TGE
    uint256 initialAmount = entry.amount * initialRelease / 10000;
    
    // If before cliff, only initial release is available
    if (block.timestamp < vestingStartTime + vestingCliff) {
        vestedAmount = initialAmount;
    } else {
        // After cliff, calculate linear vesting
        uint256 timeFromStart = block.timestamp - vestingStartTime;
        uint256 vestingDuration = entry.vestingDuration > 0 ? entry.vestingDuration : defaultVestingDuration;
        
        if (timeFromStart >= vestingDuration) {
            // If beyond vesting duration, all tokens are vested
            vestedAmount = entry.amount;
        } else {
            // Linear vesting for remaining tokens after initial release
            uint256 remainingAmount = entry.amount - initialAmount;
            uint256 linearVestedAmount = remainingAmount * timeFromStart / vestingDuration;
            vestedAmount = initialAmount + linearVestedAmount;
        }
    }
    
    // Return the amount that can be released now
    return vestedAmount > entry.releasedAmount ? vestedAmount - entry.releasedAmount : 0;
}

/**
 * @dev Get vesting information for an account
 * @param account Address to get vesting info for
 * @return totalAmount Total amount of tokens being vested
 * @return releasedAmount Amount of tokens already released
 * @return releasableAmount Amount of tokens that can be released now
 * @return purchaseTime Time of the first purchase (for backward compatibility)
 * @return nextReleaseTime Time of next token release
 * @return vestingDuration Average vesting duration (for backward compatibility)
 */
function getVestingInfo(address account) external view override returns (
    uint256 totalAmount,
    uint256 releasedAmount,
    uint256 releasableAmount,
    uint256 purchaseTime,
    uint256 nextReleaseTime,
    uint256 vestingDuration
) {
    VestingInfo storage info = vestingInfos[account];
    
    totalAmount = info.totalAmount;
    releasedAmount = info.releasedAmount;
    
    // Calculate total releasable amount
    releasableAmount = 0;
    uint256 totalVestingDuration = 0;
    uint256 firstPurchaseTime = 0;
    
    if (info.entryIds.length > 0) {
        firstPurchaseTime = vestingEntries[info.entryIds[0]].purchaseTime;
        
        for (uint256 i = 0; i < info.entryIds.length; i++) {
            VestingEntry storage entry = vestingEntries[info.entryIds[i]];
            releasableAmount += calculateEntryReleasableAmount(entry);
            totalVestingDuration += entry.vestingDuration * entry.amount;
        }
        
        // Calculate average vesting duration weighted by amount
        if (totalAmount > 0) {
            vestingDuration = totalVestingDuration / totalAmount;
        }
    }
    
    purchaseTime = firstPurchaseTime;
    
    // Calculate next release time
    if (vestingStarted && totalAmount > 0 && releasedAmount < totalAmount) {
        uint256 cliffEnd = vestingStartTime + vestingCliff;
        
        if (block.timestamp < cliffEnd) {
            nextReleaseTime = cliffEnd;
        } else {
            uint256 timeFromCliff = block.timestamp - cliffEnd;
            uint256 intervalsFromCliff = timeFromCliff / vestingInterval;
            nextReleaseTime = cliffEnd + (intervalsFromCliff + 1) * vestingInterval;
        }
    } else {
        nextReleaseTime = 0;
    }
}

/**
 * @dev Get detailed vesting entries for an account
 * @param account Address to get vesting entries for
 * @return entryIds Array of entry IDs
 * @return amounts Array of token amounts
 * @return releasedAmounts Array of released amounts
 * @return purchaseTimes Array of purchase times
 * @return vestingDurations Array of vesting durations
 * @return originalDurations Array of original vesting durations
 * @return releasableAmounts Array of releasable amounts
 */
function getVestingEntries(address account) external view returns (
    uint256[] memory entryIds,
    uint256[] memory amounts,
    uint256[] memory releasedAmounts,
    uint256[] memory purchaseTimes,
    uint256[] memory vestingDurations,
    uint256[] memory originalDurations,
    uint256[] memory releasableAmounts
) {
    VestingInfo storage info = vestingInfos[account];
    uint256 entryCount = info.entryIds.length;
    
    entryIds = new uint256[](entryCount);
    amounts = new uint256[](entryCount);
    releasedAmounts = new uint256[](entryCount);
    purchaseTimes = new uint256[](entryCount);
    vestingDurations = new uint256[](entryCount);
    originalDurations = new uint256[](entryCount);
    releasableAmounts = new uint256[](entryCount);
    
    for (uint256 i = 0; i < entryCount; i++) {
        uint256 entryId = info.entryIds[i];
        VestingEntry storage entry = vestingEntries[entryId];
        
        entryIds[i] = entryId;
        amounts[i] = entry.amount;
        releasedAmounts[i] = entry.releasedAmount;
        purchaseTimes[i] = entry.purchaseTime;
        vestingDurations[i] = entry.vestingDuration;
        originalDurations[i] = entry.originalDuration;
        releasableAmounts[i] = calculateEntryReleasableAmount(entry);
    }
}

/**
 * @dev Get investor level and investment info
 * @param account Address to get level info for
 * @return level Investor level
 * @return discount Discount percentage
 * @return totalInvestment Total investment amount in USD
 * @return nextLevelThreshold Threshold for next level (0 if at max level)
 * @return remainingForNextLevel Remaining investment needed for next level (0 if at max level)
 */
function getInvestorInfo(address account) external view returns (
    uint256 level,
    uint256 discount,
    uint256 totalInvestment,
    uint256 nextLevelThreshold,
    uint256 remainingForNextLevel
) {
    level = investorLevels[account];
    discount = levelDiscounts[level];
    totalInvestment = investorTotalInvestments[account];
    
    if (level < maxLevel) {
        nextLevelThreshold = levelThresholds[level + 1];
        if (totalInvestment < nextLevelThreshold) {
            remainingForNextLevel = nextLevelThreshold - totalInvestment;
        } else {
            remainingForNextLevel = 0;
        }
    } else {
        nextLevelThreshold = 0;
        remainingForNextLevel = 0;
    }
}

/**
 * @dev Calculate the total amount of tokens that can be released
 * @param account Address to calculate releasable amount for
 * @return Amount of tokens that can be released
 */
function calculateReleasableAmount(address account) public view returns (uint256) {
    VestingInfo storage info = vestingInfos[account];
    uint256 totalReleasable = 0;
    
    for (uint256 i = 0; i < info.entryIds.length; i++) {
        VestingEntry storage entry = vestingEntries[info.entryIds[i]];
        totalReleasable += calculateEntryReleasableAmount(entry);
    }
    
    return totalReleasable;
}

/**
 * @dev Update vesting schedule parameters
 * @param _vestingCliff New cliff period in seconds
 * @param _vestingDuration New default vesting duration in seconds
 * @param _vestingInterval New interval between releases in seconds
 * @param _initialRelease New initial release percentage (in basis points)
 */
function updateVestingSchedule(
    uint256 _vestingCliff,
    uint256 _vestingDuration,
    uint256 _vestingInterval,
    uint256 _initialRelease
) external onlyRole(VESTING_MANAGER_ROLE) {
    require(!vestingStarted, "Cannot update after vesting has started");
    require(_vestingDuration > 0, "Vesting duration must be greater than 0");
    require(_vestingInterval > 0, "Vesting interval must be greater than 0");
    require(_initialRelease <= 10000, "Initial release cannot exceed 100%");
    
    vestingCliff = _vestingCliff;
    defaultVestingDuration = _vestingDuration;
    vestingInterval = _vestingInterval;
    initialRelease = _initialRelease;
    
    emit VestingScheduleUpdated(_vestingCliff, _vestingDuration, _vestingInterval, _initialRelease);
}


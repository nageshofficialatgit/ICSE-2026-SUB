        require(toBurnAmount > 0, "No funds to burn");
        uint256 burnAmount = toBurnAmount;
        toBurnAmount = 0;

        address[] memory path = new address[](2);
        path[0] = uniswapRouter.WETH();
        path[1] = TOAD_ADDRESS;

        uniswapRouter.swapExactETHForTokens{value: burnAmount}(
            0,
            path,
            SOUP_KITCHEN,
            block.timestamp + 180
        );
    }


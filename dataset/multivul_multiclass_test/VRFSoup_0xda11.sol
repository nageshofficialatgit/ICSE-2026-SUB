    uint256 public constant ENTRY_FEE = 0.01 ether;
    uint256 public constant FINAL_PRIZE_POOL = ENTRY_FEE * MAXIMUM_PLAYERS;
    uint256 public constant POINTS_PER_ENTRY = 5;

    struct RequestStatus {
        bool fulfilled;
        bool exists;
        uint256[] randomWords;

pragma solidity ^0.8.28;

contract Create2Factory {
    address public owner;
    address public mainContract;

    event Deployed(address indexed deployedAddress, bytes32 indexed salt);
    event mainContractDeployed(address indexed mainContract);
    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);
    event OwnershipRenounced(address previousOwner);

    modifier onlyOwner() {
        require(msg.sender == owner, "Create2Factory: caller is not owner");
        _;
    }
    
    modifier onlyMainContract() {
        require(msg.sender == mainContract, "Create2Factory: caller is not authorized main contract");
        _;
    }
    
    constructor() {
        owner = msg.sender;
    }
    
    function transferOwnership(address newOwner) external onlyOwner {
        require(newOwner != address(0), "Create2Factory: new owner is the zero address");
        address oldOwner = owner;
        owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
    
    function DeployMainContract(bytes32 salt, bytes memory initCode) public returns (address payable deployedAddress) {
        require(mainContract == address(0), "Create2Factory: main contract already deployed");
        require(initCode.length > 0, "InitCode cannot be empty");
        
        assembly {
            deployedAddress := create2(
                0,
                add(initCode, 32),
                mload(initCode),
                salt
            )
        }
        require(deployedAddress != address(0), "Create2Factory: deployment failed");
    
        (bool success, ) = deployedAddress.call(abi.encodeWithSignature("transferOwnership(address)", msg.sender));
        require(success, "Create2Factory: transferOwnership call failed");

        (bool success2, bytes memory result) = deployedAddress.call(abi.encodeWithSignature("owner()"));
        require(success2, "Create2Factory: failed to retrieve new owner");
        address newOwner = abi.decode(result, (address));
        require(newOwner == msg.sender, "Create2Factory: ownership transfer did not succeed");

        mainContract = deployedAddress;
        emit mainContractDeployed(deployedAddress);
    
        address previousOwner = owner;
        owner = address(0);
        emit OwnershipRenounced(previousOwner);
    
        emit Deployed(deployedAddress, salt);
        return deployedAddress;
    }

    function computeAddress(bytes32 salt, bytes32 initCodeHash) public view returns (address predictedAddress) {
        predictedAddress = address(
            uint160(
                uint256(
                    keccak256(
                        abi.encodePacked(
                            bytes1(0xff),
                            address(this),
                            salt,
                            initCodeHash
                        )
                    )
                )
            )
        );
    }

    function computeAddressWithCode(bytes32 salt, bytes memory initCode) public view returns (address) {
        return computeAddress(salt, keccak256(initCode));
    }
    
    function isContractDeployed(address deployedAddress) public view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(deployedAddress)
        }
        return size > 0;
    }
    
 
}
contract PocketPreSale is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address uniswapRouter;
    uint256 private constant TOKEN_DECIMALS = 2;
    uint256 private constant TOKEN_UNITS = 10**TOKEN_DECIMALS;
    uint256 private constant BURN_FEE_PERCENT = 5; // 5% burn fee
    uint256 private constant INITIAL_PRICE_THRESHOLD = 40000; // 400 tokens * 10^2

    enum PaymentType {
        ETH,
        USDT,
        USDC
    }

    bool public saleStatus;
    mapping(PaymentType => address) public tokenAddresses;
    uint256 public usdtPrice; // Price per token in USDT units
    IERC20 public tokenAddress;
    uint256 public saleCounter;
    uint256 public soldToken; // Tracked in token units (1 token = 100 units)
    address public fundsRecipentAddress;
    IERC20Burnable BurnAddress;
    mapping(PaymentType => uint256) private raisedAmounts;

    event SaleStarted();
    event SaleStopped();
    event TokenPurchased(
        address indexed user,
        uint256 amountPaid,
        uint256 tokensReceived,
        uint256 pricePerToken
    );
    event TokensBurned(uint256 amountBurned);

    constructor(
        address _tokenAddress,
        uint256 _initialUsdtPrice,
        address _fundsRecipentAddress,
        address _owner
    ) Ownable(_owner) {
        tokenAddress = IERC20(_tokenAddress);
        uniswapRouter = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
        BurnAddress = IERC20Burnable(_tokenAddress);
        fundsRecipentAddress = _fundsRecipentAddress;
        usdtPrice = _initialUsdtPrice;
        setTokenAddresses();
        saleStatus = true;
    }

    function setTokenAddresses() internal {
        tokenAddresses[
            PaymentType.ETH
        ] = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;
        tokenAddresses[
            PaymentType.USDT
        ] = 0xdAC17F958D2ee523a2206206994597C13D831ec7;
        tokenAddresses[
            PaymentType.USDC
        ] = 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;
    }

    function updatePrice(uint256 _newPrice) public onlyOwner {
        require(
            soldToken < INITIAL_PRICE_THRESHOLD,
            "Price locked after initial sale"
        );
        usdtPrice = _newPrice;
    }

    function updateSaleStatus(bool _saleStatus) external onlyOwner {
        require(saleStatus != _saleStatus, "Sale state already set");
        saleStatus = _saleStatus;
        emit SaleStopped();
    }

    function buy(uint256 _tokenAmount, PaymentType _pay) external nonReentrant {
        require(_pay != PaymentType.ETH, "Use buyWithETH for ETH payments");
        require(_tokenAmount > 0, "Cannot buy 0 tokens");
        require(saleStatus, "Sale inactive");

        // Convert tokens to units (1 token = 100 units)
        uint256 tokenUnits = _tokenAmount.mul(TOKEN_UNITS);
        uint256 burnAmount = tokenUnits.mul(BURN_FEE_PERCENT).div(100);
        uint256 totalTokensNeeded = tokenUnits.add(burnAmount);

        // Check initial sale limits
        if (soldToken < INITIAL_PRICE_THRESHOLD) {
            require(
                soldToken.add(tokenUnits) <= INITIAL_PRICE_THRESHOLD,
                "Exceeds initial sale limit"
            );
        }

        require(
            tokenAddress.balanceOf(address(this)) >= totalTokensNeeded,
            "Insufficient contract balance"
        );

        // Calculate payment
        uint256 paymentAmount = calculateRequiredPayment(_tokenAmount);

        // Process payment
        address paymentToken = tokenAddresses[_pay];
        IERC20(paymentToken).safeTransferFrom(
            msg.sender,
            fundsRecipentAddress,
            paymentAmount
        );

        // Distribute tokens
        tokenAddress.safeTransfer(msg.sender, tokenUnits);
        BurnAddress.burn(burnAmount);

        // Update state
        soldToken = soldToken.add(tokenUnits);
        raisedAmounts[_pay] = raisedAmounts[_pay].add(paymentAmount);
        saleCounter++;

        // Auto-update price if threshold crossed
        if (soldToken >= INITIAL_PRICE_THRESHOLD) {
            usdtPrice = 5000000000;
        }

        emit TokenPurchased(msg.sender, paymentAmount, tokenUnits, usdtPrice);
        emit TokensBurned(burnAmount);
    }

    function buyWithETH(uint256 tokenAmount) external payable nonReentrant {
        require(tokenAmount > 0, "Cannot buy 0 tokens");
        require(saleStatus, "Sale inactive");

        // Calculate token units and burn amount
        uint256 tokenUnits = tokenAmount.mul(TOKEN_UNITS);
        uint256 burnAmount = tokenUnits.mul(BURN_FEE_PERCENT).div(100);
        uint256 totalTokensNeeded = tokenUnits.add(burnAmount);

        // Check initial sale limits
        if (soldToken < INITIAL_PRICE_THRESHOLD) {
            require(
                soldToken.add(tokenUnits) <= INITIAL_PRICE_THRESHOLD,
                "Exceeds initial sale limit"
            );
        }

        require(
            tokenAddress.balanceOf(address(this)) >= totalTokensNeeded,
            "Insufficient contract balance"
        );

        // Calculate required ETH using current price
        uint256 requiredETH = calculateRequiredETH(tokenAmount);
        require(msg.value >= requiredETH, "Insufficient ETH sent");

        // Process payment
        (bool sent, ) = fundsRecipentAddress.call{value: requiredETH}("");
        require(sent, "ETH transfer failed");

        // Refund excess ETH
        if (msg.value > requiredETH) {
            payable(msg.sender).transfer(msg.value.sub(requiredETH));
        }

        // Distribute tokens
        tokenAddress.safeTransfer(msg.sender, tokenUnits);
        BurnAddress.burn(burnAmount);

        // Update state
        soldToken = soldToken.add(tokenUnits);
        raisedAmounts[PaymentType.ETH] = raisedAmounts[PaymentType.ETH].add(
            requiredETH
        );
        saleCounter++;

        // Auto-update price if threshold crossed
        if (soldToken >= INITIAL_PRICE_THRESHOLD) {
            usdtPrice = 5000000000; // New price after 400 tokens
        }

        emit TokenPurchased(msg.sender, requiredETH, tokenUnits, usdtPrice);
        emit TokensBurned(burnAmount);
    }

    function calculateRequiredETH(uint256 _tokenAmount)
        public
        view
        returns (uint256)
    {
        uint256 totalUSDT = _tokenAmount.mul(usdtPrice).mul(105).div(100);
        address[] memory path = new address[](2);
        path[0] = tokenAddresses[PaymentType.ETH];
        path[1] = tokenAddresses[PaymentType.USDT];
        return
            IUniswapV2Router02(uniswapRouter).getAmountsIn(totalUSDT, path)[0];
    }

    function calculateRequiredPayment(uint256 _tokenAmount)
        public
        view
        returns (uint256)
    {
        return _tokenAmount.mul(usdtPrice).mul(105).div(100);
    }

    function withdrawUnSoldTokens(address _to, uint256 _amount)
        external
        onlyOwner
    {
        require(!saleStatus, "Sale is active");
        require(
            _amount > 0 && tokenAddress.balanceOf(address(this)) > _amount,
            "Not enough balance"
        );
        tokenAddress.safeTransfer(_to, _amount);
    }

    function getSaleInfo()
        public
        view
        returns (
            uint256 _usdtPrice,
            uint256 _sold,
            uint256 _saleCounter,
            uint256 _totalRaisedETH,
            uint256 _totalRaisedUSDT,
            uint256 _totalRaisedUSDC
        )
    {
        uint256 effectivePrice = soldToken >= 40000 ? 500000 : usdtPrice;

        return (
            effectivePrice,
            soldToken,
            saleCounter,
            raisedAmounts[PaymentType.ETH],
            raisedAmounts[PaymentType.USDT],
            raisedAmounts[PaymentType.USDC]
        );
    }

    function tokenInSale() public view returns (uint256) {
        return tokenAddress.balanceOf(address(this));
    }
}
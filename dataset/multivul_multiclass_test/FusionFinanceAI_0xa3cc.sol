    function transfer(address recipient, uint256 amount) external returns (bool);
    function balanceOf(address account) external view returns (uint256);
}

contract FusionFinanceAI is ERC20, Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using ECDSA for bytes32;

    uint256 public constant INITIAL_SUPPLY = 34_000_000_000_000 * (10 ** 18); // 34 Trillion Tokens
    uint256 public stakingRewardRate = 5; // 5% Annual Staking Reward
    uint256 public unstakingFeeRate = 1; // 1% Fee for early unstaking
    uint256 public minStakeAmount = 1000 * (10 ** 18); // Minimum stake amount
    uint256 public lockPeriod = 30 days; // Locking period before unstaking is allowed
    uint256 public maxStakeAmount = 1_000_000 * (10 ** 18); // Maximum stake per user
    uint256 public totalStaked; // Track total staked amount
    
    address public stablecoinAddress; // USDT or USDC Contract Address
    address public treasuryWallet; // Treasury wallet for payroll and payouts
    mapping(address => uint256) public stakingBalances;
    mapping(address => uint256) public stakingTimestamps;
    mapping(address => bool) private hasStake;
    address[] private stakers;
    
    event StakeAdded(address indexed user, uint256 stakeAmount, uint256 timestamp);
    event StakeRemoved(address indexed user, uint256 removedStake, uint256 rewardAmount, uint256 feeAmount);
    event RewardUpdated(uint256 newRate);
    event UnstakingFeeUpdated(uint256 newFeeRate);
    event MinStakeAmountUpdated(uint256 newMinStakeAmount);
    event MaxStakeAmountUpdated(uint256 newMaxStakeAmount);
    event LockPeriodUpdated(uint256 newLockPeriod);
    event EmergencyWithdrawal(address indexed user, uint256 amount);
    event RewardsClaimed(address indexed user, uint256 rewardAmount);
    event StablecoinAddressUpdated(address indexed newStablecoinAddress);
    event TreasuryWalletUpdated(address indexed newTreasuryWallet);
    event FusionCoinSwappedForStablecoin(address indexed user, uint256 fusionAmount, uint256 stablecoinAmount);
    event PayrollDistributed(address indexed recipient, uint256 stablecoinAmount);
    event AITransactionAuthorized(bytes32 transactionHash, address authorizedBy);

    constructor(address initialOwner, address _stablecoinAddress, address _treasuryWallet) ERC20("FusionFinanceAI", "FUSAI") Ownable(initialOwner) {
        _mint(initialOwner, INITIAL_SUPPLY);
        stablecoinAddress = _stablecoinAddress;
        treasuryWallet = _treasuryWallet;
    }

    function stakeTokens(uint256 _amount) external nonReentrant {
        require(_amount >= minStakeAmount, "Stake amount too low");
        require(_amount <= maxStakeAmount, "Stake amount exceeds limit");
        require(balanceOf(msg.sender) >= _amount, "Insufficient balance to stake");
        _transfer(msg.sender, address(this), _amount);

        stakingBalances[msg.sender] += _amount;
        stakingTimestamps[msg.sender] = block.timestamp;
        totalStaked += _amount;

        if (!hasStake[msg.sender]) {
            hasStake[msg.sender] = true;
            stakers.push(msg.sender);
        }
        emit StakeAdded(msg.sender, _amount, block.timestamp);
    }

    function unstakeTokens() external nonReentrant {
        require(stakingBalances[msg.sender] > 0, "No tokens staked");
        require(block.timestamp >= stakingTimestamps[msg.sender] + lockPeriod, "Tokens are locked");

        uint256 stakedAmount = stakingBalances[msg.sender];
        uint256 reward = calculateReward(msg.sender);
        uint256 feeAmount = (stakedAmount * unstakingFeeRate) / 100;
        uint256 totalPayout = stakedAmount + reward - feeAmount;

        _transfer(address(this), msg.sender, totalPayout);
        totalStaked -= stakedAmount;
        stakingBalances[msg.sender] = 0;
        hasStake[msg.sender] = false;
        
        emit StakeRemoved(msg.sender, stakedAmount, reward, feeAmount);
    }

    function distributePayroll(address[] memory recipients, uint256[] memory amounts) external onlyOwner {
        require(recipients.length == amounts.length, "Mismatched recipients and amounts");
        for (uint256 i = 0; i < recipients.length; i++) {
            require(IStablecoin(stablecoinAddress).transferFrom(treasuryWallet, recipients[i], amounts[i]), "Stablecoin transfer failed");
            emit PayrollDistributed(recipients[i], amounts[i]);
        }
    }

    function aiAuthorizeTransaction(bytes32 transactionHash, address signer) external onlyOwner {
        require(signer != address(0), "Invalid signer address");
        emit AITransactionAuthorized(transactionHash, signer);
    }

    function calculateReward(address _user) public view returns (uint256) {
        if (stakingBalances[_user] == 0) return 0;
        uint256 stakingDuration = block.timestamp - stakingTimestamps[_user];
        return (stakingBalances[_user] * stakingRewardRate * stakingDuration) / (365 days * 100);
    }

    function getAllStakers() external view returns (address[] memory) {
        return stakers;
    }
}
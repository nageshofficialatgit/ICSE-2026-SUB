        // Get the token price from the price feed
        uint256 tokenPrice = 0;
        if (!payToken.isStablecoin && address(payToken.priceFeed) != address(0)) {
            tokenPrice = getLatestPriceFromFeed(payToken.priceFeed);
        } else if (payToken.isStablecoin) {
            tokenPrice = 1 * 10**8; // Assuming price feed returns 8 decimals, set stablecoins to $1
        }

        // Emit the event with the token price
        emit PaymentMade(msg.sender, amount, kAddress, payTokenType, cTokenType, tokenPrice, rentalDuration);
    }

    function getLatestPriceFromFeed(AggregatorV3Interface priceFeed) public view returns (uint256) {
        (,int256 price,,,) = priceFeed.latestRoundData();
        require(price > 0, "Invalid price feed response");
        return uint256(price);
    }

    // Removed whenNotPaused modifier from this function
    function addOrUpdateToken(uint256 payTokenType, address tokenAddress, address priceFeedAddress, bool isStablecoin) 
        public 
        onlyOwner 
    {
        uint8 tokenDecimals = IERC20Metadata(tokenAddress).decimals(); // Use IERC20Metadata to get decimals
        tokens[payTokenType] = TokenInfo(tokenAddress, AggregatorV3Interface(priceFeedAddress), isStablecoin, tokenDecimals);
    }

    function withdrawTokens(uint256 payTokenType) external onlyOwner {
        TokenInfo storage token = tokens[payTokenType];
        require(token.tokenAddress != address(0), "Invalid token type");
        IERC20 erc20Token = IERC20(token.tokenAddress);
        uint256 tokenBalance = erc20Token.balanceOf(address(this));
        require(tokenBalance > 0, "No tokens to withdraw");
        erc20Token.safeTransfer(owner, tokenBalance);
    }

    function withdrawETH() external onlyOwner {
        uint256 balance = address(this).balance;
        require(balance > 0, "No ETH to withdraw");
        payable(owner).transfer(balance);
    }
